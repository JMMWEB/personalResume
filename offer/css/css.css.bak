*{margin:0px; padding:0px;}
body{background:url("../images/bg.png") fixed; }
#Con{width:900px;/*宽*/margin:0px auto;}
/*头像样式*/
#Con #light{
	width:120px;
	height:150px;
	margin-left:200px;
	overflow:hidden;
	position:relative;
}
#Con dl{
	width:100px;
	height:130px; 
	background:#fff; 
	padding:10px; 
}
#Con dl dt{
	width:100px;
	height:100px; 
	background:#ffff33;
	border-radius:50%;
	box-shadow:0 0 10px;
}
#Con dl dt img{
	width:100%;
	height:100%;
	border-radius:50%;
	
}
#Con dl dd{
	width:100px;
	height:30px; 
	font-size:12px;
	text-align:center;
	line-height:30px;
}
#Con dl:before{
	content: "";
    position: absolute;
    width:40px;
    height: 300px;
    top:0px;
    left: -80px;
    overflow: hidden;
    background-image: linear-gradient(to right,rgba(255,255,255,0.2) 0,rgba(255,255,255,0.8) 50%,rgba(255,255,255,0.2) 100%);
	-webkit-animation:light 3s  linear infinite; 
}

/*List 样式*/
#Con .List{
	width:600px; 
	margin-left:260px;
	border-left:3px solid #6699ff;
	padding-top:30px;
}
.List>#biglist>li{
	height:400px;list-style-type:none;
	position:relative; margin-bottom:30px;
	-webkit-animation:sc 2s; 
	display:none;
}
 .List>#biglist>li .bq{
	width:120px;
	height:30px;
	position:absolute; 
	top:100px; left:-116px;
}
.List>#biglist>li .bq font{
	width:90px;
	height:30px;
	background:#000;
	display:block;
	float:left; 
	font-size:12px;
	color:#fff;
	text-align:Center; 
	line-height:30px;
}
 .List>#biglist>li .bq img.jt{
	position:absolute;
	left:87px;top:6px;
}
 .List>#biglist>li .bq span{
	width:6px;
	height:6px; 
	background:#99ff33; 
	display:block;
	border:2px solid #fff; 
	position:absolute; 
	right:0px; 
	top:8px;
	border-radius:10px;
}
/*ListCon css*/
 .List>#biglist>li .ListCon{
	height:400px;
	background:rgba(0,255,200,0.3); 
	border-radius:10px;  
	margin-left:10px; 
	box-shadow:0px 0px 10px #000;
}

/*css3动画*/
@-webkit-keyframes sc{
	from{ -webkit-transform:rotate(220deg) scale(0.2);}
	to{ -webkit-transform:rotate(0deg) scale(1);}
}
@-webkit-keyframes light{
	from{ -webkit-transform: rotate(-25deg) translate(-80px)}
	to{ -webkit-transform: rotate(-25deg) translate(500px)}
}
/*Canvas*/
#canvas{
	position:absolute;
	top:0;
	left:0;
	z-index:-1;
	background:rgba(0,0,0,.2);
	display:block;
	margin-left:10px;
	border-radius:10px;
}
